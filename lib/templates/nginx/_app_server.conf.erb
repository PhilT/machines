server {
  listen <%= enable_ssl ? 443 : 80 %>;
  server_name <%= server_name %>;
  root <%= File.join(AppConf.user.home, name, 'public') %>;
  rails_env <%= AppConf.environment %>;
  passenger_enabled on;

  <% if enable_ssl %>
    ssl on;
    ssl_certificate /etc/ssl/certs/<%= ssl_crt %>;
    ssl_certificate_key /etc/ssl/private/<%= ssl_key %>;
  <% end %>

  access_log /var/log/nginx/<%= name %>.access.log main;
  error_log /var/log/nginx/<%= name %>.error.log notice;

  # Allow images and css in maintenance.html file
  if ($request_filename ~* \.(css|jpg|gif|png)$) {
    break;
  }

  # Rewrite all the requests to the maintenance.html page if it exists.
  if (-f $document_root/system/maintenance.html) {
    return 503;
  }

  # Cache assets: see http://developer.yahoo.com/performance/rules.html#expires
  location ~ ^/(images|javascripts|stylesheets)/ {
    expires 10y;
  }

  # send 404 and servers errors to 404 or 500
  error_page 404 /404.html;
  error_page 500 502 504 /500.html;

  error_page 503 @503;
  location @503 {
    rewrite  ^(.*)$  /system/maintenance.html break;
  }

  <% if basic_auth %>
    auth_basic "Restricted";
    auth_basic_user_file basic_auth_passwd;

    # location ~ paths/to/bypass/auth
    # {
    #     passenger_enabled on;
    #     auth_basic off;
    # }
  <% end %>
}

