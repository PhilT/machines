all_apps = %w(application wiki)
machine 'Desktop', :development, :roles => [:app, :db], :apps => all_apps
machine 'Staging', :staging, :roles => [:app, :db], :apps => all_apps
machine 'Production', :production, :roles => [:app], :apps => all_apps
machine 'DBmaster', :production, :roles => [:db, :dbmaster]
machine 'DBslave', :production, :roles => [:db, :dbslave]

package :questions

package :dependencies
package :timezone
package :base

only :roles => :app do
  package :monit unless AppConf.environment == :development
  package :dotfiles
  package :webapps
  package :git
  package :rvm
  package :ruby
  package :nginx
  package :passenger
  package :nginx_passenger
  package :nginx_logrotate
  package :postfix unless AppConf.environment == :development
end

only :roles => :db do
  package :mysql
end

only :users => 'phil' do
  package :openbox
  package :docky
  package :slim
  package :apps
  package :chrome
  package :firefox
  package :gmate
  package :amazon_mp3
end

sudo upgrade

