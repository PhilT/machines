<% AppConf.webapps.each do |appname, app| %>
  <% if app.uses_delayed_job %>
    <% script = "/usr/bin/env RAILS_ENV=#{AppConf.environment} #{app.full_path}/current/script" %>
    check process delayed_job with pidfile <%= app.full_path %>/shared/pids/delayed_job.pid
          start program = "<%= script %>/delayed_job start"
          stop program = "<%= script %>/delayed_job stop"
  <% end %>
<% end %>

