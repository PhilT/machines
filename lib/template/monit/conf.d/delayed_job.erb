<% AppConf.apps.select{|app| app.uses_delayed_job}.each do |app| %>
<% script = "/usr/bin/env RAILS_ENV=#{AppConf.environment} #{app.path}/current/script" %>
check process delayed_job with pidfile <%= app.path %>/shared/pids/delayed_job.pid
      start program = "<%= script %>/delayed_job start"
      stop program = "<%= script %>/delayed_job stop"
<% end %>

